<div class="row row_space">
<% @articles.each do |f| %>
<% if can? :read, f %>
<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
	<div class="pin_image">
	<a href="<%=article_path(f)%>"><div class="pin_box">
		<%= image_tag f.photo, :class => "img-thumbnail img_padding" %>
	<h2 class="text-center"><%=link_to f.title, article_path(f)%></h2>
		<ol>
		<li>種類：<%=f.category.name%></li>
		<li>TAG：<%=f.tag_list%></li>
		<li>更改時間：<%=f.updated_at.strftime("%F")%></li>
		<li>狀態：<%=f.status%></li>
		</ol>
	</div></a>
</div>
</div>
<% end %>
<% end %>
<%= link_to "新增文章", new_article_path, :class => "btn btn-primary" %>
</div>
