<!-- 註冊頁面 /users/sign_up-->

<div class="register_row">
<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>
  <div>
    <h2 class="register_title">註冊</h2>
    <div class="input_box"><%= f.input :name, :required => true, :autofocus => true, :label => "姓名" %></div>
    <div class="input_box"><%= f.input :email, :required => true %></div>
    <div class="input_box"><%= f.input :sex, :required => true, :label => "性別", :prompt => "choose your sex", :collection => ["男","女"] %></div>
    <div class="input_box"><%= f.input :birthday, :required => true, :label => "生日" %></div>
    <div class="input_box"><%= f.input :password, :required => true, :label => "密碼" %></div>
    <div class="input_box"><%= f.input :password_confirmation, :required => true, :label => "密碼確認" %></div>
  </div>
  <div>

    <%= f.button :submit, "註冊", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#user_birthday').datepicker();
  });
</script>
