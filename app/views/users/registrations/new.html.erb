<!-- 註冊頁面 -->
<h2>註冊</h2>
<div class="register_row" style="height:500px" >
<section class="col-xs-8 col-sm-3 col-md-3 col-lg-3">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>


  <div class="form-inputs">
    <div class="form-group"><%= f.input :name, :required => true, :autofocus => true, :label => "姓名" %></div>
    <div class="form-group"><%= f.input :email, :required => true %></div>
    <div class="form-group"><%= f.input :sex, :required => true, :label => "性別", :prompt => "choose your sex", :collection => ["男","女"] %></div>
    <div class="form-group"><%= f.input :birthday, :required => true, :label => "生日" %></div>
    <div class="form-group"><%= f.input :password, :required => true, :label => "密碼" %></div>
    <div class="form-group"><%= f.input :password_confirmation, :required => true, :label => "密碼確認" %></div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "註冊", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</section>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#user_birthday').datepicker();
  });
</script>
