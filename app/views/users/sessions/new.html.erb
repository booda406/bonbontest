<div class="register_row">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  	<h2 class="register_title">登入</h2>
    <% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
    <% end %>
  	<div class="input_box">
	 <%= f.input :email, :required => false, :autofocus => true %>
  	</div>
   	<div class="input_box">
    <%= f.input :password, :label => "密碼", :required => false %>
    </div>
    <div class="remember_me">
    <%= f.input :remember_me, :label => false, :inline_label => "記住我", :as => :boolean if devise_mapping.rememberable? %>
    </div>
    <%= f.button :submit, "登入", :class => "btn btn-primary", :style => "margin-left:50px" %>
  	
  	
  </div>
  <div class="register_links">
  <%= render "users/shared/links" %>
  </div>
<% end %>
</div>
